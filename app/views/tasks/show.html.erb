<div class="container">
  <h1> <%= @task.name %> </h1>

  <h3> <%= @task.details %> </h3>


  <%= link_to "Edit you task", edit_task_path(@task), class: "button" %>


  <%= link_to "Destroy task", task_path(@task), method: :delete, class: "button", data: { confirm: "Are you sure"}  %>

  <% if !@task.complete %>
    <%= link_to task_path(@task, task: {complete: true} ), method: :patch, class: "button" do %>
      <i class="fa fa-times"></i>
    <% end %>
  <% else %>
    <%= link_to task_path(@task, task: {complete: false} ), method: :patch, class: "button" do %>
      <i class="fa fa-check"></i>
    <% end %>
  <% end %>

<!--   <%# link_to 'Mark', mark_task_as_complete_path(@task), method: :patch %> -->
</div>
